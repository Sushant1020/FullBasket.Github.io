<%layout('layouts/boilerplate')%>

<body>
  <div class="card">
    <h7>Cart's Items You have added are as follows:</h7>
  </div>
  <div class="row">
    <% for(product of parr){%>
    <div class="col-3">
      <div class="box">
        <div class="row">
          <div class="col-6">
            <image class="img" src="<%=product.images[0].url%>"></image>
          </div>
          <div class="col-6">
            <h7 class="row"> <%=product.name%> </h7>
            <h8 class="row"> &#8377;<%=product.price%> </h8>
            <a class="btn btn-success" href="/cartremove/<%=product._id%>">
              Remove From Cart
            </a>
          </div>
        </div>
      </div>
    </div>
    <%}%>
  </div>
  <style>
    .box {
      width: 100%;
      height: 150px;
      border: 5px dashed #f7a239;
    }

    img {
      width: 60%;
      /* takes the 100 % width of its container (.box div)*/
      height: 60%;
      /* takes the 100 % height of its container (.box div)*/
    }
  </style>

  <script
    src=" https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>

  <script src="/javascripts/validateForms.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
</body>
